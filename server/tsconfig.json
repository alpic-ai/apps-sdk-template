{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react",
    "inlineSources": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../bridge/src/server/widgetsDevServer.ts",
    "../bridge/src/hooks/use-openai-global.ts",
    "../bridge/src/hooks/use-tool-output.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
